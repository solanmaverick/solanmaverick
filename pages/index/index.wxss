/* Global styles */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

/* Upload Section */
.upload-section {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

.upload-box {
  background: white;
  border-radius: 16rpx;
  padding: 48rpx;
  width: 80%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.upload-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.upload-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  text-align: center;
}

.upload-button {
  background: #07c160;
  color: white;
  padding: 20rpx 48rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 16rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-top: 16rpx;
  text-align: center;
}

/* Toolbar */
.toolbar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.toolbar-left {
  display: flex;
  gap: 16rpx;
}

.toolbar-right {
  display: flex;
  align-items: center;
}

.icon-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 8rpx 16rpx;
  transition: opacity 0.3s;
}

.icon-button:after {
  border: none;
}

.icon-button image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  transition: opacity 0.3s;
}

.icon-button text {
  font-size: 24rpx;
  color: #666;
}

.icon-button[disabled] {
  opacity: 0.5;
  background: transparent;
}

.icon-button image.disabled {
  opacity: 0.5;
}

.settings-button {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f0f7ff;
  border-radius: 8rpx;
  transition: background-color 0.3s;
}

.settings-button:active {
  background: #e6f4ff;
}

.settings-button image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.settings-button text {
  font-size: 28rpx;
  color: #1890ff;
}

/* Move To Dialog */
.move-to-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.move-to-dialog.visible {
  display: flex;
}

.move-to-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
}

.move-to-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  display: block;
  text-align: center;
}

.move-to-input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 24rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.move-to-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
  gap: 20rpx;
}

.move-to-buttons button {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
}

/* Student Info */
.student-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

/* Table Container */
.table-container {
  margin-top: 20rpx;
}

/* Table Row */
.table-row {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 300rpx; /* Minimum height to show toolbar and fixed attributes */
  transition: background-color 0.3s;
}

.table-row.selected {
  background-color: #f0f7ff;
  box-shadow: 0 2rpx 12rpx rgba(24, 144, 255, 0.15);
}

.operations {
  width: 120rpx;
  background: #f8f8f8;
  padding: 10rpx;
  border-radius: 8rpx 0 0 8rpx;
  opacity: 0.6;
  transition: opacity 0.3s;
}

.operations.selected {
  opacity: 1;
}

.operations button[disabled] {
  opacity: 0.5;
  background: #f5f5f5;
  color: #999;
}

.operations button {
  font-size: 24rpx;
  margin: 10rpx 0;
  background: #e6f4ff;
  color: #1890ff;
  border-radius: 4rpx;
}

.row-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  min-width: 600rpx; /* Minimum width to show fixed attributes */
  overflow: hidden;
}

.fixed-attributes {
  flex: 0 0 auto;
  width: 400rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* Fixed attribute specific styles */
.school-name, .major-name {
  font-size: 32rpx;
}

.code-row {
  padding: 8rpx 0;
}

.code-value {
  font-family: monospace;
  font-size: 28rpx;
  padding: 4rpx 8rpx;
  background: #f8f8f8;
  border-radius: 4rpx;
  display: inline-block;
}

.ranking-diff {
  margin-top: 8rpx;
}

.dynamic-attributes {
  flex: 1;
  padding-left: 20rpx;
  overflow-x: auto;
  min-width: 0;
}

.attribute-row {
  display: flex;
  margin-bottom: 16rpx;
  min-height: 44rpx;
  align-items: center;
}

.attribute-label {
  flex: 0 0 auto;
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.attribute-value {
  flex: 1;
  font-size: 28rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  word-break: break-all;
  min-width: 0;
}
