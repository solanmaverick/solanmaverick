<view class="container">
  <view class="settings-section">
    <view class="setting-item" wx:for="{{attributes}}" wx:key="index">
      <text>{{item.name}}</text>
      <switch checked="{{item.visible}}" bindchange="toggleAttribute" data-index="{{index}}"/>
    </view>
  </view>
  <view class="button-section">
    <button bindtap="saveSettings">保存设置</button>
  </view>
</view>
